@model AplicationMessanger.Models.ViewModel.AddUserVM;
@{
}
<section class="Form-ChatCreation">
    <div class="main">
        <a asp-controller="Home" asp-action="Index"> <img src="~/img/arrow.svg" alt="arrow" class="arrow"></a>
        <form method="post" asp-action="GetUsersForUpdate">
            <input asp-for="ChatId" value="@Model.ChatId" hidden/>
            <input type="text" asp-for="SearchLine" placeholder="Search...">
            <button type="submit">
                <img src="~/img/loop.svg" alt="loop">
            </button>
        </form>
        @if (Model.Users!=null)
        {
            <div class="user-container">
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                
                    
                    <div class="user">
                        @if (Model.Users[i].Avatar != "")
                        {
                            <img src="~/img/avatars/@Model.Users[i].Avatar" alt="user"/>

                        }
                        else
                        {
                            <img src="~/img/placeholder.png" alt="user">
                        }
                        <h2>@Model.Users[i].UserName</h2>
                        <form method="post" asp-action="AddUsers">
                            <input asp-for="UserId" value="@Model.Users[i].Id" hidden/>
                            <input asp-for="ChatId" value="@Model.ChatId" hidden/>
                            <button type="submit"><img src="~/img/plus-circle.svg" alt="delete" class="confirm"></button>


                        </form>
                    </div>
                    
                
                

            }    
            </div>
            }
